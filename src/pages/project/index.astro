---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import { render } from 'astro:content';
import Project from "../../components/Project.astro"

const projects = (await getCollection('project')).sort(
	(a, b) => a.data.rank.valueOf() - b.data.rank.valueOf(),
);

---

<!doctype html>
<html lang="en">
	<head>
		
		<BaseHead title={"Projects / Akhilesh Kr Sharma"} 
			description={SITE_DESCRIPTION} 
  		/>				

		<style> 
			
			.project-content{
				border: 1px #e0e0e0 solid;
				border-radius: 4px;
				padding: 1rem 0;
				margin-bottom: 1rem;
				font-size: 1rem;
				background-color: #fbfbfb;
			}

			li{
				ul {
					list-style-type: disc;
					margin: 0;
					padding-left: 1rem;
					padding-bottom: -1rem;
				}

				li {
					line-height: 1.7rem;
				}
			}

			.project-title{
				margin: 0rem;
			}

			.yt-embed{ 
				max-width: 40rem;
				box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px; 
				border-radius: 10px; 	
				margin: 2rem 1rem 1rem 1rem;
			}
 

			@media (max-width: 720px) {
				li{
					ul {
						list-style-type: disc;
						margin: 0;
						padding-left: 2rem;
					}

					li {

					}
				}
			}
			
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<p class="text-5xl text-neutral-950">Personal projects</p>
				<p>This page lists some of my personal projects, also available on <a href="https://github.com/akhilsharmaa">Github</a>.</p>

				<ul>
					{
						projects.map(async (project) => {
						  return (
						  	<hr>
							<li id={project.id}>
								<Project project={project} />
							</li>
						  );
						})
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

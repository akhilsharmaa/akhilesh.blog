---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { render } from 'astro:content';

const posts = (await getCollection('project')).sort(
	(a, b) => a.data.rank.valueOf() - b.data.rank.valueOf(),
);

---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style> 
			
			.project-content{
				border: 1px #e0e0e0 solid;
				border-radius: 4px;
				padding: 1rem 0;
				margin-bottom: 1rem;
				font-size: 1rem;
				background-color: #fbfbfb;
			}

			li{
				ul {
					list-style-type: disc;
					margin: 0;
					padding-left: 4rem;
					padding-bottom: -1rem;
				}

				li {
					line-height: 1.6rem;
				}
			}
			
			.project-title{
				margin: 0rem;
			}

			.deployment-link{
				/* padding: 0px; */
				border-radius: 4px;
				text-underline-offset: 3px;
				border: 1px solid var(--accent);
				color: var(--accent);
				padding: 1px 10px;
				font-size: 1rem;
				text-decoration: none;
			}

			.deployment-link:hover{
				color: white;
				background-color: var(--accent);
			}

			tag{
				padding-top: -5rem;
				font-size: 1rem;
				color: white;
				background-color: var(--accent);
				padding: 0.1rem .75rem;
				margin:  0rem .5rem .5rem 0rem  ;
				border-radius: 2rem;
				border: 1px solid var(--accent);
			}

			@media (max-width: 720px) {
				li{
					ul {
						list-style-type: disc;
						margin: 0;
						padding-left: 2rem;
					}

					li {

					}
				}
			}
			
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h3 class="color-primary">Projects</h3>


				<ul>
					{
						posts.map(async (post) => {
						  // Destructure the Astro <Content/> component out
						  const { Content } = await render(post);
			
						  // Then return your UI
						  return (
						  <hr>
							<br>
							
							<li>
								<div class="flex flex-wrap items-center justify-between ">
									<h1 class="text-3xl project-title">{post.data.title}</h1> 
									<div>
										(<a href={post.data.codeLink}>github</a>,
										<a href={post.data.codeLink}>demo</a>) 
									</div>
								</div>

								<a class="deployment-link"
										href={post.data.deploymentLink}>
											{post.data.deploymentLink}
								</a> 
								
								<a href="post.data.codeLink"></a>
								<p class="text-xl">{post.data.description}</p> 

								<div class="project-content">
									<Content />
								</div>

								{post.data.tags.map((tag:string) => {
										<tag>{tag}</tag>
								})}

							</li>
							<br>
						  );
						})
					  }
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Atcoder from '../components/CodingProfile/Cards/atcoder.astro'; 
import CodeForces from '../components/CodingProfile/Cards/codeforces.astro'; 
import Leetcode from '../components/CodingProfile/Cards/leetcode.astro'; 
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="">
	<Header />
	<homepage> 
		
		<div class="lg:grid grid-cols-2 lg:grid-cols-4 gap-6 md:mx-0 lg:mx-32 w-full"> 
			<!-- Sidebar -->
			<div class="p-4 lg:col-start-4 lg:col-span-1">
			  <img src="./my-image.png" alt="Placeholder Image" class="profile-image" />
			  <h3 class="text-lg font-bold mb-3">Quick Links</h3>
			  <ul class="space-y-2">
				<li><a href="#" class="text-blue-500 hover:underline">My Portfolio</a></li>
				<li><a href="#" class="text-blue-500 hover:underline">Contact Me</a></li>
				<li><a href="#" class="text-blue-500 hover:underline">GitHub</a></li>
				<li><a href="#" class="text-blue-500 hover:underline">Twitter</a></li>
			  </ul>
			</div>
		  
			<!-- Main Content -->
			<div class="  p-6 lg:row-start-1 lg:col-span-3">
				
				<h1 class="text-2xl font-bold mb-4">Hi, I'm Akhilesh!</h1>
				<p class="mb-6 text-gray-700">Fueled by a love for engineering.</p>

				<hr class="h-px my-4 bg-gray-200 border-0">

				<div class="grid gap-4 md:grid-cols-3">
					<div><CodeForces /></div>
					<div><Leetcode /></div>
					<div><Atcoder /></div>
				</div>

			  	<hr class="h-px my-4 bg-gray-200 border-0">
			</div>
		</div>

	</homepage>	  
	<Footer />
	</body>
</html>

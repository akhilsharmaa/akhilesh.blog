---
const today = new Date();
const { highestRating, currentRating, badge, username, platform, plaform_logo_url} = Astro.props;
---

<div class:list={['coding-profile-card', platform]} >   
    <div class="mx-4 my-2">
        <h4> <highlight> {platform} </highlight> </h4>
        <h4> <span class="item-context">Badge - </span>{badge}</h4> 
        <h4> <span class="item-context">Rating - </span> {highestRating}</h4>
        <!-- <h4> <span class="item-context">Current Rating - </span> {currentRating}</h4>   -->
        <h4> <span class="item-context">  @{username} </span></h4>
    </div>
</div> 


<style>


    .profile-image{
        width: 10rem;
    }

    .coding-profile-card {
        background: white;
        width: 100%; 
        border-radius: 2px;
        overflow: hidden;
        border: 1px #e6e6e6 solid;
    }

    .Codeforces {
        box-shadow: 0.25rem 0.25rem 0 #007e8536;
    }

    .Leetcode {
        box-shadow: 0.25rem 0.25rem 0 #d1760031;
    }

    .Atcoder {
        box-shadow: 0.25rem 0.25rem 0 #55555521;
    }

    .coding-profile-card h4 { 
        font-size: 1.1rem;
        padding:  2px 0px 0px 1px;
        font-weight: 400;
        margin: 0px; 
    }
    

    .platform-text {
        font-size: 1rem;
        font-weight: 400;
    }

    .item-context{
        color: #5f5f5f;
    }

    .coding-profile-card img {
        object-fit: cover;
        padding: 0px 5px;
        height: 15px;
        filter: grayscale(100%);
    }
    
</style>

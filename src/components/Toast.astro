---
const { title, description, button, link } = Astro.props;
---


<div id="toast-message-cta" class="fixed bottom-0 right-0 sm:m-10 m-4 w-full float-right max-w-sm p-4 border-red-400 border-2 text-gray-500 bg-white rounded-lg shadow-lg hidden" role="alert">    <div class="flex">
        <div class="ms-3 text-sm font-normal">
            <span class="mb-1 text-sm font-semibold text-gray-900">{title}</span>
            <div class="mb-2 text-sm font-normal">{description}</div> 
            <a href={link} class="text-pretty inline-flex px-2.5 py-1.5 text-xs font-medium text-center text-white bg-orange-600 rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300">
                {button}
            </a>   
        </div>
        <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-white justify-center items-center shrink-0 text-red-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex h-8 w-8" id="close-toast" aria-label="Close">
            <span class="sr-only">Close</span>
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
        </button>
    </div>
</div>

<script>
    // Show toast message after 4 seconds
    setTimeout(() => {
        document.getElementById('toast-message-cta').classList.remove('hidden');
    }, 1000);

    // Hide toast message when the close button is clicked
    document.getElementById('close-toast').addEventListener('click', () => {
        document.getElementById('toast-message-cta').classList.add('hidden');
    });
</script>
